<!DOCTYPE html>
  <html lang="zh-cn" class="login">
      <%- include("./public/head.ejs")%>
      <body>
          <section>
              <form method="POST" action="/login">
                  <div class="form-group">
                      <%if(name){%>
                      <input type="text" name="name" placeholder="账号" value="<%= name%>">
                      <%}else{%>
                      <input type="text" name="name" placeholder="账号">
                      <%}%>
                  </div>
                  <div class="form-group">
                      <%if(pwd){%>
                      <input type="password" name="password" placeholder="密码" value="<%= pwd%>">
                       <%}else{%>
                      <input type="password" name="password" placeholder="密码" >
                      <%}%>
                      <%if(message){%>
                      <p style="font-size:20px"><%= message%></p>
                      <% } %>
                  </div>
                  <div class="form-group">
                      <input type="submit" value="登录">
                      <a href="/register" id="btn" style=""><span>注册</span></a>
                  </div>
              </form>
          </section>
          <%- include("./public/footer.ejs")%>
      </body>
  </html>